{
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Database=CorpFileHubDb;Username=postgres;Password=your_password"
    },
    "YandexDisk": {
        "ClientId": "your-client-id",
        "ClientSecret": "your-client-secret",
        "RefreshToken": "encrypted-refresh-token"
    },
    "FileStorage": {
        "ArchivePath": "./Archive",
        "MaxFileSize": 104857600,
        "AllowedExtensions": [ ".docx", ".xlsx", ".pptx", ".pdf", ".txt", ".jpg", ".png" ]
    },
    "Email": {
        "SmtpServer": "smtp.gmail.com",
        "SmtpPort": 587,
        "Username": "your-email@company.com",
        "Password": "encrypted-password"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}